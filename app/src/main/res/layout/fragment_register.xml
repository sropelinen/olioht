<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="160dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:background="@drawable/boarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Create New User"
                android:textColor="@color/black"
                android:textSize="13pt"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_marginTop="16dp"
                android:id="@+id/linearMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">


                <EditText
                    android:id="@+id/editFirstName"
                    android:background="@drawable/boarder_colorless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginVertical="16dp"
                    android:gravity="center"
                    android:hint="First Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/editLastName"
                    android:background="@drawable/boarder_colorless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginVertical="16dp"
                    android:gravity="center"
                    android:hint="Last Name"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textDisplayDate"
                    android:background="@drawable/boarder_colorless"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginVertical="16dp"
                    android:gravity="center"
                    android:text="Select birth date"
                    android:textSize="20sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="32dp"
                        android:layout_marginVertical="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editHeight"
                            android:background="@drawable/boarder_colorless"
                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:hint="Height"
                            android:inputType="number" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:layout_marginHorizontal="4dp"
                            android:gravity="center"
                            android:text="cm"
                            android:textColor="@color/black"
                            android:textSize="20dp" />


                        <EditText
                            android:id="@+id/editWeight"
                            android:background="@drawable/boarder_colorless"
                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:layout_marginVertical="4dp"
                            android:gravity="center"
                            android:hint="Weight"
                            android:inputType="number" />

                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:layout_marginHorizontal="4dp"
                            android:gravity="center"
                            android:text="kg"
                            android:textSize="20dp" />

                    </LinearLayout>

                </HorizontalScrollView>

                <EditText
                    android:id="@+id/editUserNameRegister"
                    android:background="@drawable/boarder_colorless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginVertical="16dp"
                    android:gravity="center"
                    android:hint="Username"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/editPasswordRegister"
                    android:background="@drawable/boarder_colorless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginVertical="16dp"
                    android:gravity="center"
                    android:hint="Password"
                    android:inputType="textPassword" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearMain"
                app:layout_constraintVertical_bias="0.421">

                <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/boarder"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center"
                    android:onClick="returnLogin"
                    android:text="nope" />

                <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/boarder"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center"
                    android:onClick="register"
                    android:text="create" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

